<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zm_transparent"
    android:orientation="vertical"
    android:paddingLeft="1dip"
    android:paddingRight="1dip"
    android:minWidth="280dip"
    android:paddingTop="3dip" >

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alertTitle"
            style="@style/ZMTextView.Large.OnLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Title text" />

        <!-- If the client uses a customTitle, it will be added here. -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="3dip" 
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="ifContentScrolls"
            android:paddingBottom="0dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/alertIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@android:drawable/ic_dialog_alert" />
                
                <TextView
                    android:id="@+id/alertdialogmsg"
                    style="@style/ZMTextView.Medium.OnLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:text="message text" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/customPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="3dip" 
        android:visibility="gone" >

        <FrameLayout
            android:id="@+id/customView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/customPanelBottomGap"
        android:layout_width="match_parent"
        android:layout_height="12dip"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

    <ImageView
        android:id="@+id/titleDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/zm_list_divider" />

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:minHeight="54dip"
        android:paddingBottom="0dip"
        android:paddingTop="3dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:measureWithLargestChild="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/leftSpacer"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:visibility="gone" >
            </LinearLayout>

            <Button
                android:id="@+id/button1"
                style="@style/ZMButton.Dialog.HappyPath"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="OK" />

            <Button
                android:id="@+id/button3"
                style="@style/ZMButton.Dialog"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="Neutral" />

            <Button
                android:id="@+id/button2"
                style="@style/ZMButton.Dialog"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="3dip"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="Cancel" />

            <LinearLayout
                android:id="@+id/rightSpacer"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                android:visibility="gone" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>