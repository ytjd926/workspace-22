<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
          >

<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" android:layout_gravity="center_horizontal" android:src="@drawable/choosedeal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/md1000" android:layout_gravity="center"
            android:layout_marginBottom="155dp" android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/danbingyihao" android:layout_alignStart="@+id/danbingyihao"
            android:onClick="inMD1000"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/danbingyihao" android:layout_gravity="center"
        android:layout_above="@+id/md1000" android:layout_centerHorizontal="true" android:layout_marginBottom="96dp"
        android:alpha="1"
        android:onClick="inDanbingyihao"/>


</RelativeLayout>