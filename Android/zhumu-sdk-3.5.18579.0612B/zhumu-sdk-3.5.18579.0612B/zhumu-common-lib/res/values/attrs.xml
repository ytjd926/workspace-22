<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="image_text_orientation">
        <enum name="horizontal" value="0" />
        <enum name="vertical" value="1" />
    </attr>

    <declare-styleable name="ZMImageTextButton">
    	<attr name="zm_image" format="reference" />
    	<attr name="zmImageTextOrientation" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="ZMBaseTheme">
    	<attr name="zm_tipAppearance" format="reference" />
    	<attr name="zm_settingsLayoutAppearance" format="reference" />
    	<attr name="zm_settingsCategoryAppearance" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="ZMTip">
    	<attr name="zm_borderColor" format="color" />
    	<attr name="zm_shadowColor" format="color" />
    	<attr name="zm_background" format="color|reference" />
    	<attr name="zm_backgroundColorIfHardwareAccelerated" format="color" />
    </declare-styleable>
    
    <declare-styleable name="ZMIOSStyleTitlebarLayout">
    	<attr name="zm_leftButton" format="reference" />
    	<attr name="zm_rightButton" format="reference" />
    	<attr name="zm_title" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="ZMDynTextSizeTextView">
    	<attr name="zm_maxReduce" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="ZMSettingsLayout">
    	<attr name="zm_settingsCategorySpacing" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="ZMSettingsCategory">
    	<attr name="zm_showTopDivider" format="boolean" />
    	<attr name="zm_showCenterDivider" format="boolean" />
    	<attr name="zm_showBottomDivider" format="boolean" />
    	<attr name="zm_topDivider" format="reference" />
    	<attr name="zm_bottomDivider" format="reference" />
    	<attr name="zm_centerDivider" format="reference" />
    	<attr name="zm_dividerHeight" format="dimension" />
    	<attr name="zm_settingsItemSelector" format="reference" />
    	<attr name="zm_seetingsItemMinHeight" format="dimension" />
    	<attr name="zm_settingsCategoryBackground" format="reference|color" />
    </declare-styleable>
    
</resources>