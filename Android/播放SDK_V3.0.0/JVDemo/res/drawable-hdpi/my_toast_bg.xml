<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <stroke
        android:width="0dip"
        android:color="#BB000000" />
    <!-- 描边 ：边框宽度与颜色 -->
    <padding
        android:bottom="0dip"
        android:left="0dip"
        android:right="0dip"
        android:top="0dip" />
    <!-- 主要内容的padding 文字距离上下左右的距离 -->
    <corners
        android:bottomLeftRadius="2dip"
        android:bottomRightRadius="2dip"
        android:topLeftRadius="2dip"
        android:topRightRadius="2dip" />
    <!-- 圆角的半径  也可以统一设置半径 android:radius="9dip" -->

    <gradient
        android:angle="270"
        android:endColor="#BB000000"
        android:startColor="#BB000000" />
    <!-- 渐变 -->
    <solid android:color="#BB000000" />
    <!-- 没有描边的中间部分 -->
    <!-- solid 与  gradient 只能显示在代码最后那个 -->

</shape>